<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cuong.mathforkid.GameActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    tools:background="@color/colorAccent">

    <TextView
        android:id="@+id/cScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="SCORE"
        android:textSize="@dimen/score_size"
        android:textColor="#000"
        android:paddingBottom="8dp"
        android:layout_below="@id/progress"/>

    <TextView
        android:id="@+id/cScoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cScore"
        android:layout_alignStart="@id/cScore"
        android:layout_alignEnd="@id/cScore"
        android:gravity="center"
        tools:text="50"
        android:textSize="@dimen/score_size"
        android:textColor="#000"/>

    <ImageButton
        android:id="@+id/sound"
        android:layout_width="@dimen/sound_size"
        android:layout_height="@dimen/sound_size"
        android:layout_alignEnd="@+id/falseBtn"
        android:layout_alignTop="@+id/cScore"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:src="@drawable/unmute"/>

    <View
        android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/resView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/fakeView"
        android:textSize="@dimen/question_size"
        tools:text="= 100"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/formulaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/resView"
        android:textSize="@dimen/question_size"
        tools:text="50 + 50"
        android:textColor="#000"/>

    <ImageButton
        android:background="@drawable/true_btn_effect"
        android:id="@+id/trueBtn"
        android:layout_width="@dimen/yesno_size"
        android:layout_height="@dimen/yesno_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:background="@drawable/false_btn_effect"
        android:id="@+id/falseBtn"
        android:layout_width="@dimen/yesno_size"
        android:layout_height="@dimen/yesno_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="ASB"
        android:textColor="#000"
        android:textSize="@dimen/asb_size" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
